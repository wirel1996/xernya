%h2{style: "color: #B00100; margin: 0 auto"} show item
%br

%h4= @item.name.upcase 

%ul
    %li Price:       #{@item.price} $
    %li Weight:      #{@item.weight}
    %li Description: #{urls_to_content(@item.description)}
